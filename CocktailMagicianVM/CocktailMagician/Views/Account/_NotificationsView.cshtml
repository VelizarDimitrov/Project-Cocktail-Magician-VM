@model UserViewModel


    <div class="admin-content-wrapper">

        <div class="admin-section-title">

            <h2>Hello @Model.FirstName @Model.LastName !</h2>
            <p>Your last loged-in: <span class="text-primary">@Model.LastLogIn</span></p>

        </div>

        <div class="admin-empty-dashboard">

            @*<div class="icon">
                <i class="ion-ios-book-outline"></i>
            </div>*@
            @if (!Model.Notifications.Notifications.Any())
            {
                <h4>You have no any activities yet!</h4>
            }
            <ul class="comment-item">
                @foreach (var notification in Model.Notifications.Notifications)
                {
                    <li>
                        <div class="comment-header">
                            <h6 class="heading mt-0">@notification.Name</h6>
                            <span class="comment-time">@notification.SentOn</span>
                        </div>
                        <div class="comment-content">
                            <p>@notification.Text</p>
                        </div>
                    </li>
                }
            </ul>

        </div>
        <div hidden="hidden">
            <input id="current-page" asp-for="Page" value="@Model.Page" />
        </div>
        @if (Model.Notifications.Notifications.Count != 0)
        {
            <div class="pager-wrapper">

                <ul class="pager-list">
                    @if (Model.Page != 1)
                    {
                        <li class="paging-nav"><a onclick="changePage(-1)"><i class="fa fa-angle-left"></i></a></li>
                    }
                    <li class="number">
                        <span class="mr-5"><span class="font600">page</span></span>
                    </li>
                    <li class="number">
                        <span class="font600">@Model.Page</span>
                    </li>
                    @if (!Model.LastPage)
                    {
                        <li class="paging-nav"><a onclick="changePage(1)"><i class="fa fa-angle-right"></i></a></li>
                    }

                </ul>

            </div>
        }

    </div>

