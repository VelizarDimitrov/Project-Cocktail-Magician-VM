@model BarSearchViewModel
@if (!Model.Bars.Any())
{
    <p>No bars found with that name</p>
}
    <ul class="comment-item">
        @foreach (var bar in Model.Bars)
        {
            
            <li>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3">
                            <h4>@bar.Name</h4>
                        </div>
                        <div class="col-lg-5">
                            <h6>@bar.City, @bar.Country - @bar.Address</h6>
                        </div>
                        <div class="col-lg-3">
                            <button  value="@bar.Id" onclick="unFavorite(this.value)" class="btn btn-primary label label-danger">
                                Unfavorite
                            </button>

                            <form>
                            <button asp-area="Bar" asp-action="BarDetails" asp-controller="Bar" value="@bar.Id" name="barId" class="btn btn-primary label label-danger">
                                Details
                            </button>
                            </form>

                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
<div hidden="hidden">
    <input id="current-page" asp-for="Page" value="@Model.Page" />
    <input id="current-keyword" asp-for="Keyword" value="@Model.Keyword" />
</div>
@if (Model.Bars.Count != 0)
{
    <div class="pager-wrapper">

        <ul class="pager-list">
            @if (Model.Page != 1)
            {
                <li class="paging-nav"><a onclick="changePage(-1)"><i class="fa fa-angle-left"></i></a></li>
            }
            <li class="number">
                <span class="mr-5"><span class="font600">page</span></span>
            </li>
            <li class="number">
                <span class="font600">@Model.Page</span>
            </li>
            @if (!Model.LastPage)
            {
                <li class="paging-nav"><a onclick="changePage(1)"><i class="fa fa-angle-right"></i></a></li>
            }

        </ul>

    </div>
}

<script>
    function unFavorite(barId) {
        $.ajax({
            url: '/bar/unfavoritebar',
            type: "POST",
            data: { barId: barId },
            success: function () {
                changePage(0);
            }
        });
    }
</script>